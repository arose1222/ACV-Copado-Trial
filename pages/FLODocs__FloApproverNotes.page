<apex:page showHeader="false" sidebar="false" standardController="FLODocs__FLO_Change_Request__c" extensions="FLODocs.FloChangeRequestButtonsController" >
<script>
function closeWindow(){
	window.parent.opener.reloadPage();
	window.self.close();
}
</script>
	<apex:form >
		<apex:pageMessages />
		<apex:pageBlock title="Approver Notes - {!$User.FirstName} {!$User.LastName}">
			<apex:pageBlockButtons >
				<apex:commandButton value="Approve" action="{!approve}" oncomplete="closeWindow();" />
			</apex:pageBlockButtons>
			<apex:pageBlockSection columns="1">
				<apex:inputfield value="{!cr.FLODocs__Approver_Notes__c}" style="width: 350px; height: 180px;" />
			</apex:pageBlockSection>
		</apex:pageBlock>
	</apex:form>
</apex:page>