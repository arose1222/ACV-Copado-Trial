<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>46.0</apiVersion>
    <description>List view that shows Work Orders</description>
    <isExposed>true</isExposed>
    <masterLabel>Work Order List View</masterLabel>
    <targets>
        <target>lightning__HomePage</target>
        <target>lightning__AppPage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__HomePage, lightning__AppPage">
            <property name="cardTitle" type="String" label="List Title" default="Work Orders"/>
            <property name="sobject" type="String" label="SObject (API Name)" default="WorkOrder"/>
            <property name="fields" type="String" label="Fields to Display"/>
            <property name="recordLimit" type="Integer" label="Number of Records to Show" default="100"/>
            <property name="icon" type="String" label="SLDS Icon Name (category:icon_name)" default="standard:case"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>